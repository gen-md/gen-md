{
  "name": "gen-md-vscode",
  "displayName": "gen-md",
  "description": "Generative markdown framework for VS Code",
  "version": "0.1.0",
  "publisher": "gen-md",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:gen-md",
    "workspaceContains:**/*.gen.md"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gen-md",
        "aliases": ["gen-md", "genmd"],
        "extensions": [".gen.md"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gen-md",
        "scopeName": "source.gen-md",
        "path": "./syntaxes/gen-md.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "gen-md.generate",
        "title": "Generate from .gen.md",
        "category": "gen-md"
      },
      {
        "command": "gen-md.validate",
        "title": "Validate .gen.md files",
        "category": "gen-md"
      },
      {
        "command": "gen-md.showCascade",
        "title": "Show Cascade Chain",
        "category": "gen-md"
      },
      {
        "command": "gen-md.compact",
        "title": "Compact .gen.md files",
        "category": "gen-md"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "gen-md.generate",
          "when": "resourceExtname == .gen.md",
          "group": "gen-md"
        }
      ],
      "explorer/context": [
        {
          "command": "gen-md.validate",
          "when": "resourceExtname == .gen.md",
          "group": "gen-md"
        }
      ]
    },
    "configuration": {
      "title": "gen-md",
      "properties": {
        "gen-md.validateOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Validate .gen.md files on save"
        },
        "gen-md.showCascadeOnHover": {
          "type": "boolean",
          "default": true,
          "description": "Show cascade chain on hover"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@gen-md/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
