{
  "name": "gen-md",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Generative markdown framework for structured content generation",
  "workspaces": [
    "packages/*",
    "tests/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "npm test --workspace=tests/e2e",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gen-md/gen-md.git"
  },
  "keywords": [
    "markdown",
    "generation",
    "ai",
    "llm",
    "prompts",
    "documentation"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "prettier": "^3.2.0",
    "typescript-eslint": "^8.0.0"
  }
}
