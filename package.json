{
  "name": "gen-md",
  "version": "0.1.0",
  "description": "Git-like MCP for predictive version control using .gen.md specs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gen-md": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp -r prompts dist/",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "mcp": "node dist/mcp/server.js",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gen-md/gen-md.git"
  },
  "keywords": [
    "gen-md",
    "generative",
    "markdown",
    "mcp",
    "model-context-protocol",
    "ai",
    "code-generation",
    "git",
    "predictive"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "diff": "^5.2.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/diff": "^5.2.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.0.0"
  }
}
